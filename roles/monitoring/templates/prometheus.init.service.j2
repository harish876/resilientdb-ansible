[Unit]
Description={{ prometheus_service_name }}
Wants=network-online.target
After=network-online.target

[Service]
User={{ prometheus_user_id }}
Group={{ prometheus_group_id }}
Restart=always
RestartSec=2
StartLimitInterval=0
Type=simple
ExecStart={{ prometheus_exec_command }}

[Install]
WantedBy=multi-user.target